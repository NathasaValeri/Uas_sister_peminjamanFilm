{
  "version": 2,
  "builds": [
    { "src": "Backend/auth-service.js", "use": "@vercel/node" },
    { "src": "Backend/movie-service.js", "use": "@vercel/node" },
    { "src": "Backend/rental-service.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/auth/(.*)", "dest": "Backend/auth-service.js" },
    { "src": "/movies/(.*)", "dest": "Backend/movie-service.js" },
    { "src": "/rentals/(.*)", "dest": "Backend/rental-service.js" },
    { "src": "/(.*)", "dest": "Frontend/index.html" }
  ]
}